# ============================================================================
# ARCHIVO .env - CONFIGURACIÓN DE RENZZO ELÉCTRICOS
# ============================================================================
# Este archivo contiene todas las variables de entorno necesarias para
# el funcionamiento del sistema en producción.
# 
# ⚠️  IMPORTANTE: No subir este archivo a Git con valores reales
# ============================================================================

# ============================================================================
# DJANGO - CONFIGURACIÓN GENERAL
# ============================================================================

# Modo debug (False en producción)
DEBUG=False

# Clave secreta de Django (generarla con: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())')
SECRET_KEY=django-insecure-CHANGE-THIS-IN-PRODUCTION-use-complex-random-key-here

# Hosts permitidos (separados por coma, sin espacios)
# IMPORTANTE: Cloudflare Tunnel conecta puerto 5018 a renzzoelectricos.com
ALLOWED_HOSTS=localhost,127.0.0.1,renzzoelectricos.com,www.renzzoelectricos.com

# ============================================================================
# BASE DE DATOS MySQL
# ============================================================================

# Motor de base de datos
DATABASE_ENGINE=django.db.backends.mysql

# Nombre de la base de datos
DATABASE_NAME=renzzoelectricos_db

# Usuario de la base de datos (NO usar root en producción)
DATABASE_USER=renzzo_admin

# Contraseña del usuario de la base de datos
DATABASE_PASSWORD=RenzzoEl3ctr!c0s2024#Secure

# Contraseña del usuario root de MySQL
DATABASE_ROOT_PASSWORD=R00tRenzz0!2024#MySQL

# Host de la base de datos (usar 'db' cuando se usa Docker, 'localhost' en local)
DATABASE_HOST=db

# Puerto de la base de datos
DATABASE_PORT=3306

# ============================================================================
# SUPERUSUARIO DJANGO (se crea automáticamente si no existe)
# ============================================================================

DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@renzzoelectricos.com
DJANGO_SUPERUSER_PASSWORD=Admin123!RenzzoElectricos

# ============================================================================
# REDIS - CACHE Y COLAS (Opcional)
# ============================================================================

REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=RenzzoR3d!s2024

# ============================================================================
# PUERTOS DE SERVICIOS
# ============================================================================

# Puerto expuesto para Cloudflare Tunnel (NO cambiar, debe ser 5018)
# Cloudflare Tunnel detecta este puerto y lo conecta a renzzoelectricos.com
WEB_PORT=5018

# Puerto de MySQL (interno, no exponer públicamente)
DATABASE_PORT=3306

# ============================================================================
# EMAIL - CONFIGURACIÓN DE CORREO (Opcional)
# ============================================================================

# Backend de email (django.core.mail.backends.smtp.EmailBackend)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend

# Servidor SMTP
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True

# Credenciales de email
EMAIL_HOST_USER=info@renzzoelectricos.com
EMAIL_HOST_PASSWORD=your-email-password

# Email por defecto para envíos
DEFAULT_FROM_EMAIL=Renzzo Eléctricos <info@renzzoelectricos.com>

# ============================================================================
# ALMACENAMIENTO DE ARCHIVOS (AWS S3 - Opcional)
# ============================================================================

# Usar S3 para archivos estáticos y media (True/False)
USE_S3=False

# Credenciales de AWS (si USE_S3=True)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=renzzoelectricos-media
AWS_S3_REGION_NAME=us-east-1

# ============================================================================
# SEGURIDAD - CONFIGURACIÓN ADICIONAL
# ============================================================================

# Forzar HTTPS (False porque Cloudflare maneja el SSL/TLS automáticamente)
SECURE_SSL_REDIRECT=False

# HTTP Strict Transport Security - HSTS (0 = desactivado, usar solo con HTTPS directo)
# Cloudflare maneja esto por nosotros, dejar en 0
SECURE_HSTS_SECONDS=0

# Configuración de sesiones y CSRF (True en producción con HTTPS)
# Activar cuando el sitio esté en producción con dominio HTTPS
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# CSRF Trusted Origins - CRÍTICO para producción con Cloudflare
# Lista separada por comas de dominios confiables (formato: https://dominio.com)
# DEBE incluir el dominio de producción para evitar errores 403 en formularios
CSRF_TRUSTED_ORIGINS=https://renzzoelectricos.com,https://www.renzzoelectricos.com

# Tiempo de vida de la sesión (en segundos, 2 semanas = 1209600)
SESSION_COOKIE_AGE=1209600

# ============================================================================
# SENTRY - MONITOREO DE ERRORES (Opcional)
# ============================================================================

# DSN de Sentry para monitoreo de errores
SENTRY_DSN=

# ============================================================================
# OSCAR E-COMMERCE - CONFIGURACIÓN
# ============================================================================

# Moneda por defecto
OSCAR_DEFAULT_CURRENCY=COP

# Nombre de la tienda
OSCAR_SHOP_NAME=Renzzo Eléctricos

# ============================================================================
# TIMEZONE Y LOCALIZACIÓN
# ============================================================================

TIME_ZONE=America/Bogota
LANGUAGE_CODE=es-co

# ============================================================================
# LOGS - CONFIGURACIÓN
# ============================================================================

# Nivel de log (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Directorio de logs
LOG_DIR=/app/logs
